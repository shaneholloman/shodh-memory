{
  "$schema": "https://registry.modelcontextprotocol.io/schema/server.json",
  "name": "io.github.varun29ankuS/shodh-memory",
  "description": "Persistent AI memory with semantic search. Store observations, decisions, learnings, and recall them across sessions using vector similarity.",
  "version": "0.1.0",
  "repository": {
    "url": "https://github.com/varun29ankuS/shodh-memory",
    "source": "https://github.com/varun29ankuS/shodh-memory/tree/main/mcp-server"
  },
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@shodh/memory-mcp",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      }
    }
  ],
  "tools": [
    {
      "name": "remember",
      "description": "Store a memory for future recall"
    },
    {
      "name": "recall",
      "description": "Semantic search to find relevant memories"
    },
    {
      "name": "list_memories",
      "description": "List all stored memories"
    },
    {
      "name": "forget",
      "description": "Delete a specific memory"
    },
    {
      "name": "memory_stats",
      "description": "Get memory statistics"
    }
  ],
  "resources": [
    {
      "uriPattern": "memory://{memory_id}",
      "description": "Individual memory entries"
    }
  ]
}
